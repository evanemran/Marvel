<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".CharacterDetailActivity">
    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loader"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/white" />
    <ScrollView
        android:id="@+id/character_detail_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView_character_name"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:text="Character"
                android:textSize="28sp"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/marvel_font_comic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_container"
                android:layout_below="@+id/textView_character_name"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageView_character_banner"
                        android:layout_width="0dp"
                        android:src="@drawable/characters"
                        android:scaleType="centerCrop"
                        android:padding="4dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView_character_banner_name"
                            android:text=""
                            android:textStyle="normal"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/marvel_font_comic"
                            android:padding="8dp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/textView_character_banner_desc"
                            android:text=""
                            android:textStyle="normal"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:maxLines="5"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/marvel_font_comic"
                            android:padding="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView_comic_div"
                android:layout_below="@+id/cardView_container"
                android:text="Comics"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="24sp"
                android:fontFamily="@font/marvel_font_comic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_comics"
                android:layout_margin="16dp"
                android:layout_below="@+id/textView_comic_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView_series_div"
                android:layout_below="@+id/recycler_comics"
                android:text="Series"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="24sp"
                android:fontFamily="@font/marvel_font_comic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_series"
                android:layout_margin="16dp"
                android:layout_below="@+id/textView_series_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView_stories_div"
                android:layout_below="@+id/recycler_series"
                android:text="Stories"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="24sp"
                android:fontFamily="@font/marvel_font_comic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_stories"
                android:layout_margin="16dp"
                android:layout_below="@+id/textView_stories_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView_events_div"
                android:layout_below="@+id/recycler_stories"
                android:text="Events"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="24sp"
                android:fontFamily="@font/marvel_font_comic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_events"
                android:layout_margin="16dp"
                android:layout_below="@+id/textView_events_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView_details_div"
                android:layout_below="@+id/recycler_events"
                android:text="More..."
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="24sp"
                android:fontFamily="@font/marvel_font_comic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_below="@+id/textView_details_div"
                android:orientation="horizontal"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_detail_marvel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Marvel"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/white"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/marvel_font_comic"
                    android:padding="6dp"/>
                <Button
                    android:id="@+id/button_detail_comiclink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ComicLink"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/white"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/marvel_font_comic"
                    android:padding="6dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>